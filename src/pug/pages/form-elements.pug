include ../../blocks/text-field/text-field.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/checkbox-button/checkbox-button.pug
include ../../blocks/logo/logo.pug
include ../../blocks/label/label.pug
include ../../blocks/radio-button/radio-button.pug
include ../../blocks/toggle/toggle.pug
include ../../blocks/button/button.pug
include ../../blocks/bullet-list/bullet-list.pug
include ../../blocks/expandable-checkbox-list/expandable-checkbox-list.pug
include ../../blocks/rich-checkbox-button/rich-checkbox-button.pug
<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Form Elements
  body
    +logo
    +text-field('text field', 'Email')
    +text-field('text field', 'This is pretty awesome', 'autofocus', '')
    +text-field('masked text field', 'ДД.ММ.ГГГГ', '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}')
    .dropdown-wrapper
      +dropdown('bedrooms','beds','bathrooms', 'спальни', 'кровати', 'ванные комнаты')
        
    .checkboxes-wrapper
      .checkboxes-label-wrapper
        +label({text: "checkbox buttons"})
      .checkbox-wrapper
        +checkbox-button('Можно курить', 'smoking', 'smoking')
      .checkbox-wrapper
        +checkbox-button('Можно с питомцами', 'pets', 'pets')
      .checkbox-wrapper
        +checkbox-button('Можно пригласить гостей (до 10 человек)', 'guests', 'guests')
        
    .radio-buttons-area-wrapper
      .radio-buttons-label-wrapper
          +label({text: "radio buttons"})
      .radio-buttons-wrapper
          .radio-button-wrapper
            +radio-button('Мужчина', 'gender', 'man')
          .radio-button-wrapper
            +radio-button('Женщина', 'gender', 'woman')
        
    +toggle('Получать спецпредложения', 'special-offer')
    .button-area-wrapper
      +label({text: "buttons"})
      .button-wrapper
        +button('click', 'submit', 'theme_simple')
      .button-wrapper
        +button('click', 'submit', 'theme_simple-colorized')
      .button-wrapper
        +button('click', 'submit', 'theme_border')
      .button-wrapper
        +button('click', 'submit', 'theme_border-background')
      .button-wrapper
        +button('click', 'submit', 'theme_long')

    .bullet-list-area-wrapper
      +label({text: "bullet list"})
      +bullet-list('rules', 'Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00')
    +rich-checkbox-button({label: "Широкий коридор", id: "wide-corridor", name: "wide-corridor", description: "Ширина коридоров в номере не менее 91 см."})
    +rich-checkbox-button({label: "Помощьник для инвалидов", id: "invalid-assistant", name: "invalid-assistant", description: "На 1 этаже вас встретит специалист и проводит до номера."})

    +expandable-checkbox-list("asdasd", "expandable checkbox list", "Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь", "Телевизор", "Шампунь")

include ../../blocks/text-field/text-field.pug
include ../../blocks/dropdown/dropdown.pug
include ../../blocks/checkbox-button/checkbox-button.pug
include ../../blocks/logo/logo.pug
include ../../blocks/label/label.pug
include ../../blocks/radio-button/radio-button.pug
include ../../blocks/toggle/toggle.pug
<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Form Elements
    body
        +logo
        +text-field('text field', 'Email')
        +text-field('text field', 'This is pretty awesome', 'autofocus', '')
        +text-field('masked text field', 'ДД.ММ.ГГГГ', '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}')
        +dropdown
        
        .checkboxes-wrapper
            .checkboxes-label-wrapper
                +label('checkbox buttons')
            .checkbox-wrapper
                +checkbox-button('Можно курить', 'smoking', 'smoking')
            .checkbox-wrapper
                +checkbox-button('Можно с питомцами', 'pets', 'pets')
            .checkbox-wrapper
                +checkbox-button('Можно пригласить гостей (до 10 человек)', 'guests', 'guests')
        
        .radio-buttons-area-wrapper
            .radio-buttons-label-wrapper
                +label('radio buttons')
            .radio-buttons-wrapper
                .radio-button-wrapper
                    +radio-button('Мужчина', 'gender', 'man')
                .radio-button-wrapper
                    +radio-button('Женщина', 'gender', 'woman')
        
        +toggle('Получать спецпредложения', 'special-offer')
